@import "Template/ParameterTemplate.wxss";

.tryGlassView {
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 0px;
  width: 70px;
  height: 70px;
  z-index: 700;
}

.tryGlassImage {
  width: 59px;
  height: 59px;
}

.contentView {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.swiper_box {
  width: 100%;
  background-color: white;
}

.bannerImage {
  width: 100%;
  height: 100%;
}

.productInfo {
  margin-top: 5px;
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: white;
  padding-bottom: 20px;
}

.productName {
  margin-top: 20px;
  margin-left: 20px;
  font-size: 20px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: 500;
}

.priceText {
  margin-top: 10px;
  margin-left: 20px;
  font-size: 20px;
  font-weight: 500;
}

.specificationView {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  margin-top: 5px;
  width: 100%;
  padding-bottom: 50px;
}

.specificationTitleView {
  display: flex;
  align-items: center;
  width: 100%;
  height: 60px;
}

.specificationDetailText {
  margin-left: 20px;
  width: calc(50% - 30px);
  font-size: 20px;
  text-align: center;
}

.columnLine {
  width: 1px;
  height: 20px;
}

.specificationParameterText {
  width: calc(50% - 30px);
  font-size: 20px;
  text-align: center;
}

.lineImage {
  width: calc(100% - 20px);
  height: 1px;
}

.specifications {
  width: 100%;
}

.FrameView {
  margin-top: 20px;
  width: 100%;
}

.specificationItem {
  display: flex;
  align-items: center;
  width: 100%;
  height: 50px;
}

.keyText {
  margin-top: 5px;
  margin-left: 20px;
  font-size: 16px;
  color: #999;
}

.valueText {
  margin-top: 5px;
  margin-left: 30px;
  font-size: 16px;
  color: #333;
  font-weight: 500;
}

.webView {
  margin-top: 5px;
  width: 100%;
  background-color: white;
}

.footView {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 50px;
  background-color: white;
}

.leftBottomView {
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: center;
  width: calc(40% - 30px);
  height: 100%;
}

.cartBottomView{
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  width: 32px;
  height: 100%;
}

.cartImage {
  width: 32px;
  height: 22px;
}

.phoneImage {
  flex: 1;
  width: 32px;
  height: 22px;
  border-right: 1px solid #dcdcdc;
}

.addCartButton {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 10px;
  width: 30%;
  height: 36px;
  border: 1px solid #63a0d4;
  border-radius: 3px;
}

.cornerMarkView{
  position: absolute;
  width: 18px;
  height: 18px;
  border-radius: 9px;
  background-color: red;
  color: white;
  font-size: 10px;
  text-align: center;
  line-height: 18px;
  margin-left: 10px;
  margin-top: -10px;
}

.payOrderButton {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 10px;
  width: 30%;
  height: 36px;
  background-color: #63a0d4;
  border-radius: 3px;
}

.bookText {
  font-size: 14px;
  color: white;
}

.addCartText {
  font-size: 14px;
  color: #63a0d4;
  text-align: center;
}

.tryImage {
  width: 40px;
  height: 40px;
}

.HomeMenu{
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 100px;
  right: 0px;
  background-color: #000;
  opacity: 0.5;
  width: 44px;
  height: 44px;
  border-radius: 22px;
}

.HomeMenuImage{
  width: 29px;
  height: 24px;
}

