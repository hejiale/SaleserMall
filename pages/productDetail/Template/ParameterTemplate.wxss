.parameterMainView {
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  top: 0;
  bottom: 0;
  z-index: 1000;
}

#classViewCover {
  width: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  background-color: #333;
  opacity: 0.7;
}

.parameterContentView {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  left: 10px;
  right: 10px;
  background-color: white;
  border-radius: 8px;
}

.topTitleView{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 50px;
}

.topCancleButton {
  position: absolute;
  font-size: 15px;
  right: 0px;
  width: 60px;
  font-weight: 500;
  color: #4d9fd8;
  text-align: center;
}

.parameterInfoView {
  display: flex;
  align-items: center;
  width: 100%;
}

.parameterImage {
  width: 30%;
  height: 80px;
}

.parameterRightView {
  display: flex;
  flex-direction: column;
  width: calc(70% - 20px);
}

.specificationsView {
  display: flex;
  flex-direction: column;
  margin-top: 10px;
  width: calc(100% - 20px);
}

.classItem {
  display: inline-block;
  margin-top: 5px;
  margin-left: 5px;
  width: calc((100% - 20px)/4);
  height: 30px;
  border-radius: 5px;
}

.classItemText {
  display: inline-block;
  font-size: 12px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
  text-align: center;
  line-height: 30px;
}

.popPropertyView {
  display: flex;
  flex-direction: column;
  margin-top: 10px;
  width: 100%;
}

.popPropertyTitleView {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.TitleText {
  margin-left: 5px;
  line-height: 20px;
  font-size: 12px;
  color: #111;
}

.parameterNumView {
  display: flex;
  align-items: center;
  width: calc(100% - 20px);
  height: 60px;
}

.editCartNumView {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 30px;
}

.reduceCartImage {
  width: 46px;
  height: 26px;
}

.cartNumText {
  width: 30px;
  height: 26px;
  line-height: 26px;
  text-align: center;
  font-size: 20px;
  font-weight: 500;
}

.parameterLineImage {
  width: 100%;
  height: 1px;
}

.parameterFootView {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20px;
  margin-bottom: 20px;
  width: calc(100% - 20px);
  height: 36px;
  background-color: #63a0d4;
  border-radius: 3px;
}

.parameterFootText {
  font-size: 14px;
  color: white;
  text-align: center;
}

.show {
  display: block;
}

.hide {
  display: none;
}
