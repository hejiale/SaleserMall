.classContentView {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 45px;
  z-index: 1000;
}

.classViewCover {
  width: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  background-color: #333;
  opacity: 0.7;
}      

.classMainView {
  position: absolute;
  top: 0;
  width: 100%;
  background-color: #fff;
  padding-top: 15px;
  padding-left: 5px;
}

.classItem {
  display: inline-block;
  margin-left: 10px;
  margin-bottom: 10px;
  height: 30px;
  line-height: 30px;
  font-size: 13px;
  text-align: center;
  border-radius: 3px;
  font-weight: 500;
}

.closeCoverView {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 36px;
}

.closeCoverImage {
  width: 44px;
  height: 17px;
}


