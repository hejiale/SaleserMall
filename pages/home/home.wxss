@import "template/ClassTemplate.wxss";
@import "../../utils/Template/ProductListTemplate/ProductListTemplate.wxss";

.contentView {
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  top: 0px;
  width: 100%;
  z-index: 800;
}

.search-input-view {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 45px;
  align-items: center;
  background-color: white;
}

.search-input {
  display: flex;
  flex-direction: row;
  margin-left: 15px;
  width: calc(100% - 30px);
  height: 35px;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 5px;
}

.search-icon {
  margin-left: 5px;
  width: 30rpx;
  height: 30rpx;
}

.inputSearch {
  margin-left: 5px;
  height: 20px;
  font-size: 14px;
  width: calc(100% - 25px);
  color: #999;
}

.classMenuView {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 50px;
  background-color: white;
}

.scroll-view-x {
  width: calc(100% - 50px);
  height: 40px;
}

.hengxiangul {
  width: 100%;
  height: 100%;
  display: flex;
  white-space: nowrap;
}

.hengxiangul li {
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 0 15px;
}

.liText {
  line-height: 37px;
  font-size: 16px;
  font-weight: 500;
}

.liBottomLine {
  width: 100%;
  height: 3px;
  background-color: #222;
}

.openView {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50px;
  height: 100%;
}

.openMenuImage {
  width: 16px;
  height: 9px;
}

.templateContentView {
  position: relative;
  left: 0px;
  width: 100%;
}

.templateSessionView {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.templateTitleView {
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: white;
}

.templateMainTitle {
  font-size: 24px;
  text-align: center;
  margin-top: 18px;
  width: 100%;
  font-weight: 500;
}

.templateSubTitle {
  font-size: 14px;
  text-align: center;
  margin-top: 8px;
  width: 100%;
  color: #999;
  padding-bottom: 18px;
}

.productListView {
  position: relative;
  margin-top: 5px;
  width: calc(100% - 5px);
}

.emptyCartView {
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: calc(100% - 45px);
  background-color: white;
}

.emptyImage {
  width: 182px;
  height: 218px;
}

.bottomCoverMenuView {
  display: flex;
  position: fixed;
  align-items: center;
  left: 10px;
  bottom: 10px;
  height: 42px;
  z-index: 888;
  background-color: #000;
  opacity: 0.5;
  border-radius: 3px;
}

.personMenu {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50px;
  height: 100%;
}

.personMenuImage {
  width: 24px;
  height: 26px;
}

.lineMenuImage {
  width: 1px;
  height: 29px;
}

