@import "Template/AddressTemplate.wxss";

.scroll-container {
  width: 100%;
  padding-bottom: 40px;
}

.emptyCartView{
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 0px;
  width: 100%;
  height: calc(100% - 40px);
  background-color: white;
}

.emptyImage{
  width: 182px;
  height: 218px;
  margin-bottom: 56px;
}

.footView {
  display: flex;
  flex-direction: column;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 40px;
}

.footText {
  background-color: #63a0d4;
  color: white;
  font-size: 15px;
  height: 40px;
  line-height: 40px;
  text-align: center;
}
